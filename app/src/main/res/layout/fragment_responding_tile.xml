<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.chaverim5t.chaverim.ui.RespondingTileFragment">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/responding"
            android:id="@+id/call_type_image"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            style="?android:attr/textAppearanceMedium"
            android:text="Flat in Cedarhurst"
            android:layout_weight="1"
            android:id="@+id/title_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="?android:attr/textAppearanceLarge"
            android:text="5"
            android:id="@+id/call_number_text"/>
    </LinearLayout>
    <View style="@style/Divider" />
    <include layout="@layout/text_and_image" />
    <View style="@style/Divider" />
    <include layout="@layout/text_and_image" />
    <View style="@style/Divider" />
    <include layout="@layout/text_and_image" />
    <View style="@style/Divider" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group chat is available only when other units are responding."/>

    </FrameLayout>
    <View style="@style/Divider" />

    <include layout="@layout/text_and_image" />
</LinearLayout>
