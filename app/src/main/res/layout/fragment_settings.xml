<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="org.chaverim5t.chaverim.ui.SettingsFragment"
    android:orientation="vertical">

    <org.chaverim5t.chaverim.ui.utils.VerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"> <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You are logged in as: ABC"
                        android:id="@+id/settings_logged_in_as_text"
                        style="?android:attr/textAppearanceMedium"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log Out"
                        android:id="@+id/settings_log_out_button"/>
                    <include layout="@layout/text_and_image" android:id="@+id/settings_call_dispatch_hotline" />
                    <include layout="@layout/text_and_image" android:id="@+id/settings_call_responder_hotline" />
                </LinearLayout>

                <View
                    style="@style/Divider" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings are only available on Android 3.0 and up."
                    android:textAppearance="?android:textAppearanceLarge"
                    android:id="@+id/settings_only_on_android_30_and_up_text"/>
                <fragment
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:name="org.chaverim5t.chaverim.ui.SettingsSubFragment"
                    tools:layout="@layout/fragment_sub_settings"
                    android:id="@+id/settings_sub_fragment" />
            </LinearLayout>

        </FrameLayout>
    </org.chaverim5t.chaverim.ui.utils.VerticalScrollView><!-- -->
</LinearLayout>
